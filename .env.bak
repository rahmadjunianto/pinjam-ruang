# Docker environment configuration
# Copy this file to .env.docker and customize as needed

APP_NAME="SIAKAD KEMENAG - Peminjaman Ruang"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8080

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration for Docker
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=adminlte_laravel
DB_USERNAME=laravel_user
DB_PASSWORD=laravel_password

# Redis Configuration (Optional)
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Connection
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@kemenag.go.id"
MAIL_FROM_NAME="${APP_NAME}"

# AdminLTE Configuration
ADMINLTE_LOGO="<b>KEMENAG</b> SIAKAD"
ADMINLTE_LOGO_IMG="vendor/adminlte/dist/img/AdminLTELogo.png"
ADMINLTE_LOGO_IMG_CLASS="brand-image img-circle elevation-3"
ADMINLTE_LOGO_IMG_XL=null
ADMINLTE_LOGO_IMG_XL_CLASS="brand-image-xs"
ADMINLTE_LOGO_IMG_ALT="AdminLTE Logo"

# Application Specific
DEFAULT_USER_ROLE=user
BACKUP_DISK=local
BACKUP_PATH=backups
